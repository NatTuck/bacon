/* -*- c -*- */

int
add_ints(int a, int b)
{ // one line comment
    int c = a + b;
    return c;
}

/*
 * Multi-line comment
 */

kernel
Array2D<int>
add(Array2D<int> aa, Array2D<int> bb) 
    @range [aa.rows]
    global Array2D<int> cc[aa.rows, aa.cols];
{

    for (int ii = 0; ii < aa.cols; ++ii) {
        cc[$x, ii] = add_ints(aa[$x, ii], bb[$x, ii]);
    }

    return cc;
}

