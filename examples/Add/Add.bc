/* -*- c -*- */

int
add_ints(int a, int b)
{ // one line comment
    return a + b;
}

/*
 * Multi-line comment
 */

kernel
Array2D<int>
add(Array2D<int> aa, Array2D<int> bb) 
@ [aa.rows]
{
    Array2D<int> cc[aa.rows, aa.cols];

    for (int ii = 0; ii < aa.cols; ++ii) {
        cc[$x, ii] = add_ints(aa[$x, ii], bb[$x, ii]);
    }

    return cc;
}

