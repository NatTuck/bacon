/* -*- c -*- */

kernel
array2d<float>
mat_mul(array2d<float> aa, array2d<float> bb) 
@ [cc.rows, cc.cols]
{
    array2d<float> cc[aa.rows, bb.cols];
    float sum = 0.0;

    assert(aa.cols == bb.rows, "Matrixes must have compatible dimensions.");

    for (int kk = 0; kk < aa.cols; ++kk) {
        sum += aa[$y, kk] * bb[kk, $y];
    }

    cc[$y, $x] = sum;

    return cc;
}

